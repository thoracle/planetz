{
  "name": "planetz-game",
  "version": "1.0.0",
  "description": "3D Space Combat Game - PlanetZ",
  "main": "frontend/static/js/app.js",
  "scripts": {
    "test:e2e": "python scripts/run_playwright_tests.py --full",
    "test:e2e:tooltips": "python scripts/run_playwright_tests.py --tooltips",
    "test:e2e:hitboxes": "python scripts/run_playwright_tests.py --hitboxes",
    "test:e2e:headed": "python scripts/run_playwright_tests.py --full --headed",
    "test:e2e:install": "python scripts/run_playwright_tests.py --install",
    "test:unit": "python -m pytest tests/playwright/test_*_logic.py -v",
    "test:integration": "python -m pytest tests/playwright/test_*_systems.py tests/playwright/test_*_integration.py -v",
    "test:ship-systems": "python -m pytest tests/playwright/test_ship_logic.py tests/playwright/test_ship_systems.py -v",
    "test:ai-behavior": "python -m pytest tests/playwright/test_ai_logic.py tests/playwright/test_ai_behavior.py -v",
    "test:mission-system": "python -m pytest tests/playwright/test_mission_logic.py tests/playwright/test_mission_integration.py -v",
    "test:ui-components": "python -m pytest tests/playwright/test_hud_components.py tests/playwright/test_navigation_ui.py -v",
    "test:physics": "python -m pytest tests/playwright/test_physics_logic.py tests/playwright/test_physics_integration.py -v",
    "test:economy": "python -m pytest tests/playwright/test_economy_logic.py tests/playwright/test_economy_integration.py -v",
    "test:all": "python -m pytest tests/playwright/ -v",
    "test:coverage": "python -m pytest tests/playwright/ --cov=frontend/static/js --cov-report=html",
    "test:watch": "python -m pytest tests/playwright/ -v --tb=short -x",
    "dev": "python main.py",
    "start": "python main.py",
    "lint": "echo 'Linting JavaScript files...' && find frontend/static/js -name '*.js' -exec echo 'Checking {}' \\;",
    "build": "echo 'Build process - copying assets and validating structure'",
    "clean": "rm -rf coverage/ .pytest_cache/ tests/playwright/__pycache__/"
  },
  "keywords": [
    "game",
    "3d",
    "space",
    "combat",
    "threejs",
    "playwright",
    "testing"
  ],
  "author": "PlanetZ Development Team",
  "license": "MIT",
  "devDependencies": {
    "playwright": "^1.40.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "bugs": {
    "url": "./issues"
  },
  "homepage": "."
}