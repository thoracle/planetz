{
  "compilerOptions": {
    // Enable JavaScript checking without requiring .ts files
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    // Target modern browsers (ES2020+ features)
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",

    // Enable strict type checking for better error detection
    "strict": false,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "noImplicitAny": false,

    // Path resolution
    "baseUrl": ".",
    "paths": {
      "three": ["node_modules/three/build/three.module.js"]
    },

    // Allow importing JSON files
    "resolveJsonModule": true,

    // Skip library checking for faster builds
    "skipLibCheck": true,

    // Enable JSDoc-based typing
    "declaration": false,
    "declarationMap": false,

    // Interop settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Output diagnostics
    "pretty": true
  },
  "include": [
    "frontend/static/js/**/*.js",
    "frontend/static/js/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend/static/js/lib/**",
    "tests/**",
    "**/*.test.js",
    "**/*.spec.js",
    "frontend/static/js/PhysicsManager.js"
  ]
}
