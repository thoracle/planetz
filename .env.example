# PlanetZ Environment Configuration
# Copy this file to .env and customize for your environment
# Never commit .env to version control!

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Flask secret key for session signing (256-bit recommended)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# If not set in development, a random key is generated each restart
SECRET_KEY=your-secret-key-here

# Admin API key for protected endpoints (/api/missions/admin/*, /api/debug-config)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ADMIN_API_KEY=your-admin-key-here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
# Leave empty for same-origin only (most secure)
# Development automatically allows localhost:5001
# Example: CORS_ORIGINS=https://example.com,https://app.example.com
CORS_ORIGINS=

# Enable HTTP Strict Transport Security header (production with HTTPS only)
# Set to 'true' when serving over HTTPS in production
ENABLE_HSTS=false

# Universe generation seed for deterministic world generation
# Default: 20299999
UNIVERSE_SEED=20299999

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask environment (development, production, testing)
FLASK_ENV=development

# Flask debug mode (set to false in production)
FLASK_DEBUG=true
